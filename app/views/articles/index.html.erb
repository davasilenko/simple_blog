<h1 class="mb-4">Статьи</h1>

<% if current_user&.admin? %>
  <%= link_to 'Создать новую статью', new_article_path, class: 'btn btn-primary mb-4' %>
<% end %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= truncate(article.content, length: 100) %></p>
          <%= link_to 'Читать далее', article_path(article), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
